<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Special-Spoon</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/navbar.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      {{!-- #081b29; --}}
      body { background-color: #2e709f; color: #fff; } .navbar {
      background-color: rgb(166, 203, 237); } .navbar-nav .nav-link.active {
      font-weight: bold; /* Make the active link text bold */ color: #007bff; /*
      Change the color of the active link */ } .navbar-brand { margin-right:
      2rem; font-size: 24px !important; font-weight: bold; } .navbar-nav {
      margin-left: auto; } .nav-link { color: #081b29; margin-right: 20px; }
      .nav-link.yellow { background-color: red; border-radius: 5px; color:
      black; font-weight: bold; } .down { position: relative; top: 55px; } /*
      Custom CSS */ .img-smaller { width: 50px; height: 50px; margin-right: 5px;
      } .img-enlarge { max-width: 100%; height: auto; max-height: 600px;
      display: block; margin: 0 auto; }
    </style>
  </head>
  <body>

    <div class="fixed-top">
      <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
          <img
            src="/img/new.png"
            alt="Your Image"
            class="img-fluid img-smaller"
          />
          <a class="navbar-brand" href="/">Special-Spoon</a>
         
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a
                  class="nav-link {{isActive request.path '/'}}"
                  href="/"
                >Home</a>
              </li>
              {{#if user}}
                <li class="nav-item">
                  <a
                    class="nav-link {{isActive request.path '/secret'}}"
                    href="/secret"
                  >Update Profile</a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link yellow {{isActive request.path '/logout'}}"
                    href="/logout"
                  >Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a
                    class="nav-link {{isActive request.path '/login'}}"
                    href="/login"
                  >Login/Register</a>
                </li>
                {{!-- <li class="nav-item">
                  <a
                    class="nav-link {{isActive request.path '/register'}}"
                    href="/register"
                  >Register</a>
                </li> --}}
              {{/if}}
            </ul>

          </div>
        </div>
      </nav>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      crossorigin="anonymous"
    ></script>

  </body>
</html>